{
  "manifest_version" : 2,
  "name" : "TV Sleuth",
  "description" : "Keep track of aired TV programs",
  "version" : "0.0.5",
  "browser_action" : {
    "default_icon" : "app/assets/images/app.png",
    "default_popup" : "app/views/app.html"
  },
  "permissions" : [
    "activeTab",
    "storage",
    "http://*/"
  ],
  "background": {
    "page": "app/views/background.html",
    "persistent": false
  }
}